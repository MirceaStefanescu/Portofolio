{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "datasource": "$PROMETHEUS_DS",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{namespace=~\"$namespace\", pod=~\"$pod\"}[5m]))",
          "legendFormat": "req/s"
        }
      ],
      "title": "Request Rate (req/s)",
      "type": "timeseries"
    },
    {
      "datasource": "$PROMETHEUS_DS",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_server_requests_seconds_count{namespace=~\"$namespace\", pod=~\"$pod\", status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count{namespace=~\"$namespace\", pod=~\"$pod\"}[5m])))",
          "legendFormat": "5xx %"
        }
      ],
      "title": "Error Rate (%)",
      "type": "timeseries"
    },
    {
      "datasource": "$PROMETHEUS_DS",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          },
          "unit": "ms"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "id": 3,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "1000 * histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{namespace=~\"$namespace\", pod=~\"$pod\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "title": "Latency p95 (ms)",
      "type": "timeseries"
    },
    {
      "datasource": "$PROMETHEUS_DS",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          },
          "unit": "cores"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "id": 4,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", pod=~\"$pod\", container!=\"\", image!=\"\"}[5m]))",
          "legendFormat": "cpu"
        }
      ],
      "title": "CPU Usage (cores)",
      "type": "timeseries"
    },
    {
      "datasource": "$PROMETHEUS_DS",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2
          },
          "unit": "gbytes"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "id": 5,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=~\"$namespace\", pod=~\"$pod\", container!=\"\", image!=\"\"}) / 1024 / 1024 / 1024",
          "legendFormat": "memory"
        }
      ],
      "title": "Memory Usage (GiB)",
      "type": "timeseries"
    },
    {
      "datasource": "$LOGS_DS",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "id": 6,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=~\"$log_job\"} |~ \".*\"",
          "refId": "A"
        }
      ],
      "title": "Recent Logs",
      "type": "logs"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["reliability", "sre", "kubernetes", "observability"],
  "templating": {
    "list": [
      {
        "current": {
          "text": "Prometheus",
          "value": "PROMETHEUS"
        },
        "hide": 2,
        "name": "PROMETHEUS_DS",
        "query": "prometheus",
        "type": "datasource"
      },
      {
        "current": {
          "text": "Loki",
          "value": "LOKI"
        },
        "hide": 2,
        "name": "LOGS_DS",
        "query": "loki",
        "type": "datasource"
      },
      {
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "datasource": "$PROMETHEUS_DS",
        "includeAll": true,
        "name": "namespace",
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 2,
        "type": "query"
      },
      {
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "datasource": "$PROMETHEUS_DS",
        "includeAll": true,
        "name": "pod",
        "query": "label_values(kube_pod_info{namespace=~\"$namespace\"}, pod)",
        "refresh": 2,
        "type": "query"
      },
      {
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "datasource": "$LOGS_DS",
        "includeAll": true,
        "name": "log_job",
        "query": "label_values({job=~\".+\"}, job)",
        "refresh": 2,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "title": "Reliability Overview",
  "version": 1
}
